<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/app_name"
            android:textColor="@color/color1"
            android:textSize="@dimen/default_28" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="注册新用户"
        android:textColor="@color/color1"
        android:textSize="@dimen/default_32" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="358dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <!--<ImageView-->
        <!--android:id="@+id/mobile_logo"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:src="@drawable/img_default" />-->

        <EditText
            android:id="@+id/mobile"
            android:layout_width="564dp"
            android:layout_height="72dp"
            android:background="@drawable/item_text_selector"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="32dp"
            android:singleLine="true"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="@dimen/default_24" />

        <TextView
            android:id="@+id/mobile_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="* 用户已存在"
            android:textColor="@color/color1"
            android:textSize="@dimen/default_24"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/send_verifyCode"
        android:layout_width="564dp"
        android:layout_height="72dp"
        android:layout_marginLeft="358dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/item_text_selector"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="发送验证码"
        android:textColor="@drawable/item_button_text_color_selector"
        android:textSize="@dimen/default_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="358dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <!--        <ImageView
                    android:id="@+id/verifyCode_logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_default" />-->

        <EditText
            android:id="@+id/verifyCode"
            android:layout_width="564dp"
            android:layout_height="72dp"
            android:background="@drawable/item_text_selector"
            android:hint="请输入验证码"
            android:inputType="textVisiblePassword"
            android:paddingLeft="32dp"
            android:singleLine="true"
            android:textColor="@color/color1"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="@dimen/default_24" />

        <TextView
            android:id="@+id/verifyCode_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="*  验证码错误"
            android:textColor="@color/color1"
            android:textSize="@dimen/default_24"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="358dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <!--        <ImageView
                    android:id="@+id/password_logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_default" />-->

        <EditText
            android:id="@+id/password"
            android:layout_width="564dp"
            android:layout_height="72dp"
            android:background="@drawable/item_text_selector"
            android:hint="请填写密码（由6-20位字母、数字组成）"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="32dp"
            android:singleLine="true"
            android:textColor="@color/color1"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="@dimen/default_24" />

        <TextView
            android:id="@+id/password_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="* 密码为6-20位数字或字母"
            android:textColor="@color/color1"
            android:textSize="@dimen/default_24"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="564dp"
        android:layout_height="72dp"
        android:layout_marginLeft="358dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/item_button_yellow_selector"
        android:enabled="false"
        android:text="注册"
        android:textColor="@drawable/item_button_text_color_selector"
        android:textSize="@dimen/default_24" />

</LinearLayout>