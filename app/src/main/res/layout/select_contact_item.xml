<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="228dp"
    android:layout_height="245dp"
    android:background="@drawable/contact_item_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/contact_card_bg">

        <ImageView
            android:id="@+id/select_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/select_tip_icon"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.konka.konkaim.ui.CircleImageView
                android:id="@+id/head_icon"
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/img_default" />

            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="备注"
                android:textColor="@color/color1"
                android:textSize="@dimen/default_28" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/online_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/online_icon"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="在线"
                    android:textColor="@color/color7"
                    android:textSize="@dimen/default_17" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>