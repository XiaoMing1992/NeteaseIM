<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_nickname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:visibility="visible">

    <ImageView
        android:id="@+id/microphone_icon_bg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:scaleType="fitXY"
        android:src="@drawable/divergent_aperture"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/microphone_icon_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:background="@drawable/divergent_aperture"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <!--    <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="语音通话"
                android:textColor="@color/color1"
                android:textSize="@dimen/default_28" />
        </LinearLayout>-->

    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:visibility="visible">

        <!--
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="183dp">

                    <ImageView
                        android:id="@+id/microphone_icon_bg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:scaleType="fitXY"
                        android:src="@drawable/divergent_aperture"

                        android:visibility="visible" />

                </RelativeLayout>
        -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="238dp"
            android:src="@drawable/microphone_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="488dp"
            android:gravity="center"
            android:text="正在搜索麦克风"
            android:textColor="@color/color1"
            android:textSize="@dimen/default_32" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="538dp"
            android:alpha="0.6"
            android:gravity="center"
            android:text="请将麦克风连接上电视"
            android:textColor="@color/color1"
            android:textSize="@dimen/default_24" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_fail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="206dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fail_to_find_microphone_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="搜索不到麦克风"
            android:textColor="@color/color1"
            android:textSize="@dimen/default_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:alpha="0.6"
            android:text="请检查麦克风是否连接上电视"
            android:textColor="@color/color1"
            android:textSize="@dimen/default_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_reconnect"
                android:layout_width="200dp"
                android:layout_height="66dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.8"
                android:text="重新连接"
                android:textColor="@color/color1"
                android:textSize="@dimen/default_24" />

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="200dp"
                android:layout_height="66dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:alpha="0.8"
                android:text="去购买"
                android:textColor="@color/color1"
                android:textSize="@dimen/default_24" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.konka.konkaim.ui.CircleImageView
            android:id="@+id/head_icon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/img_default" />

        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="@color/color1"
            android:textSize="@dimen/default_28" />

        <TextView
            android:id="@+id/connect_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="正在等待对方接受邀请..."
            android:textColor="@color/color1"
            android:textSize="@dimen/default_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/chat_refuse_bg" />

            <TextView
                android:id="@+id/operate_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="取消"
                android:textColor="@color/color1"
                android:textSize="@dimen/default_20" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="512dp"
        android:layout_marginRight="512dp"
        android:layout_marginTop="156dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.konka.konkaim.ui.CircleImageView
            android:id="@+id/from_head_icon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/divergent_aperture"
            android:src="@drawable/middle_outer_ring" />

        <TextView
            android:id="@+id/from_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="@color/color1"
            android:textSize="@dimen/default_28" />

        <TextView
            android:id="@+id/tv_chat_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="发起了语音请求"
            android:textColor="@color/color1"
            android:textSize="@dimen/default_24" />

        <LinearLayout
            android:id="@+id/layout_receive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/chat_receive_bg"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="接受"
                    android:textColor="@color/color1"
                    android:textSize="@dimen/default_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="86dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/chat_refuse_bg"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="拒绝"
                    android:textColor="@color/color1"
                    android:textSize="@dimen/default_20" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_receive_not_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/layout_receive_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/chat_refuse_bg" />

            <TextView
                android:id="@+id/layout_receive_operate_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="挂断"
                android:textColor="@color/color1"
                android:textSize="@dimen/default_20" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>