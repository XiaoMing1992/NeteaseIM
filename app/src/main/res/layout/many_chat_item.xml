<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="208dp"
    android:layout_height="224dp"
    android:background="@drawable/many_chat_item_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/layout_info"
        android:layout_width="208dp"
        android:layout_height="224dp"
        android:background="@drawable/contact_card_bg"
        android:gravity="center"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tip_point"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="时间"
                android:textColor="@color/color8"
                android:textSize="@dimen/default_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_top"
            android:gravity="center"
            android:orientation="vertical">

            <!--            <ImageView
                            android:id="@+id/group_logo"
                            android:layout_width="160dp"
                            android:layout_height="86dp"
                            android:src="@drawable/img_default" />-->


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/group_logo_recyclerView"
                            android:layout_width="160dp"
                            android:layout_height="86dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:focusableInTouchMode="false"
                            android:visibility="gone"
                            android:focusable="false"
                            android:scrollbars="none">

                        </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/layout_img_2"
                android:layout_width="160dp"
                android:layout_height="86dp"
                android:layout_marginTop="30dp"
                android:visibility="visible"
                android:orientation="horizontal">

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img1"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:src="@drawable/img_default" />

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img2"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="-14dp"
                    android:src="@drawable/img_default" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_img_3"
                android:layout_width="160dp"
                android:layout_height="86dp"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img3"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:src="@drawable/img_default" />

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img4"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="-51dp"
                    android:src="@drawable/img_default" />

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img5"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="-51dp"
                    android:src="@drawable/img_default" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_img_4"
                android:layout_width="160dp"
                android:layout_height="86dp"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img6"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:src="@drawable/img_default" />

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img7"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="-63dp"
                    android:src="@drawable/img_default" />

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img8"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="-63dp"
                    android:src="@drawable/img_default" />

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img9"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="-63dp"
                    android:src="@drawable/img_default" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_img_5"
                android:layout_width="160dp"
                android:layout_height="86dp"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img10"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:src="@drawable/img_default" />

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img11"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="-69.5dp"
                    android:src="@drawable/img_default" />

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img12"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="-69.5dp"
                    android:src="@drawable/img_default" />

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img13"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="-69.5dp"
                    android:src="@drawable/img_default" />

                <com.konka.konkaim.ui.CircleImageView
                    android:id="@+id/img14"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="-69.5dp"
                    android:src="@drawable/img_default" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color1"
                    android:textSize="@dimen/default_25" />

                <TextView
                    android:id="@+id/tv_group_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color1"
                    android:textSize="@dimen/default_25"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_edit"
        android:layout_width="208dp"
        android:layout_height="224dp"
        android:background="@color/color14"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_edit_bg"
            android:text="编辑群聊"
            android:textColor="@color/color6"
            android:textSize="@dimen/default_20" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/btn_delete_bg"
            android:text="删除群聊"
            android:textColor="@color/color6"
            android:textSize="@dimen/default_20" />
    </LinearLayout>
</RelativeLayout>