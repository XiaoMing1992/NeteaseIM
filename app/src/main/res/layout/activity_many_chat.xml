<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color4">

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="多人聊天"
            android:textColor="@color/color1"
            android:textSize="@dimen/default_32" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="58dp"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/select_contact_icon" />

        <TextView
            android:id="@+id/show_chat_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已邀请4人通话"
            android:textColor="@color/color10"
            android:textSize="@dimen/default_25" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/many_chat_recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="150dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:scrollbars="none">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/chat_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="466dp"
        android:text="通话时长 01:30"
        android:textColor="@color/color1"
        android:textSize="@dimen/default_28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="544dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_hangup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/many_chat_item_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_hangup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/team_chat_hangup_bg"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="挂断"
                android:textColor="@color/color1"
                android:textSize="@dimen/default_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="87dp"
            android:background="@drawable/many_chat_item_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/team_chat_add_bg"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="14dp"
                android:text="添加成员"
                android:textColor="@color/color1"
                android:textSize="@dimen/default_20" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
